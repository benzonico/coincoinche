<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentLeft="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/labelWholeMancheNous"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="18sp" android:text="@string/nous"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/scoreWholeMancheNous"
                android:gravity="center"
                android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentRight="true">

        <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/labelWholeMancheEux"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp" android:text="@string/eux"/>
        <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/scoreWholeMancheEux"
                android:textSize="24sp"
                />
    </LinearLayout>


</RelativeLayout>