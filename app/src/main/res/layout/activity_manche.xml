<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MancheActivity" android:orientation="vertical">

    <RelativeLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp">
        <android.support.design.button.MaterialButton android:layout_width="120dp"
                                                      android:layout_height="wrap_content"
                                                      android:text="@string/nous"
                                                      android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/preneur"
                  android:gravity="center"
                  android:layout_centerInParent="true"
        />
        <android.support.design.button.MaterialButton android:layout_width="120dp"
                                                      android:layout_height="wrap_content"
                                                      android:text="@string/eux"
                                                      android:layout_alignParentRight="true"
                                                      android:id="@+id/materialButton"/>
    </RelativeLayout>
</LinearLayout>